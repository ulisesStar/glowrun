@font-face
    font-family sans
    src url('../fonts/OpenSans-Bold.ttf')

azulcielo = #00e0fc
verdelima = #7de76f
rosaObscuro = #d41bdc
rosaClaro = #f121c1

verdeClaro = #c6e94d
verdeObscuro = #00cd6a

html, body
    background-color black
    width 100vw

h1
    font-family 'sans'
    text-transform uppercase

.glowboton
    border 5px solid white
    border-radius 0px
    padding 10px 20px
    transform-text uppercase
    font-size 20px


.angular-google-map-container
	height 100%

.carreras
    padding-top 20vh
    md-autocomplete
        background-color black
        border 5px solid white
        border-radius 0px
        height 60px
        font-size 24px !important
        color white
        font-family sans
        md-autocomplete-wrap, input
            height 50px !important
        md-icon
            color white
            height 40px
            width 40px

	.contenido

        h2
            font-size 40px
            padding 5px 0
            color white

            &.loading
                margin-bottom 0px
            &.sinloading
                border-bottom 5px solid white

	    md-grid-list
            md-grid-tile
                cursor pointer
                &.conHover
                    .content
                        width 100%
                        height 100%
                        background-color white
                        h1
                            color black
                .content
                    h1
                        color white
        	        p
                        color black
                        background-color white
                        padding 5px

.carrera
    section
        width 100vw
        height 60vh
        .left
            .titulo
                padding 10%
                h1
                    font-size 60px
                    color white
                    &.nombre
                        font-size 60px
                        background-color white
                        color black
                        padding 14px
                        margin 5px 0
                h2
                    font-size 11px
                    color white
            .md-button
                color white
        .right
            iframe
                height 100%
                width 100%

md-dialog
    &.menu
        width 100vw
        height 100vh
        max-width inherit
        max-height inherit
        .md-button
            margin 30px
            md-icon
                transform scale(2)
                color black
        .menu-container
            height 100%
            width 100%
            .md-button
                margin 30px 0
                border-color black
    &.login, &.registro
        md-toolbar
            background-color black
            color white
            text-transform uppercase
        .botones
            .md-button
                border-color black !important


header
    position absolute
    width 100vw
    height 100px
    padding 0 10px
    img
        cursor pointer
        width 200px
        margin 0 20px
    md-icon
        color white
        transform scale(2)

footer
    position fixed
    bottom 0px
    width 100%
    background-color black
    height 35px
    .starbrand
        display flex
        color white
        md-icon
            width 100px
    .md-button
        border-radius 0px
        color white

section
    height:100vh
    width 100vw
    .texto-container
        width 50%
        h1
            font-size 50px

    &.section1
        background-repeat no-repeat
        background-size cover
        background-position center center
        .glowboton, h1
            border-color white
            color white

    &.section2
        .left
            background linear-gradient(azulcielo, verdelima)
            .glowboton, h1
                border-color black
                color black
        .right
            background linear-gradient(rosaClaro, rosaObscuro)
    &.section3
        .video-container
            height 100px
.centro
    min-height calc(100vh - 150px)

md-dialog
    width 50vw
